            z-index: 5;
            animation: slide-in 0.6s;
        }

        @keyframes slide-in {
            0% { opacity: 0; transform: translateX(0%); }
            100% { opacity: 1; transform: translateX(100%); }
        }

        .overlay-container {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
